// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --------------------------------------
//  USUARIOS & GAMIFICACIN
// --------------------------------------

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String   // Nombre de Aventurero
  password  String   // Hash
  avatar    String?  
  role      Role     @default(USER)
  createdAt DateTime @default(now())

  // RPG Stats
  xpPoints  Int      @default(0)
  level     Int      @default(1)
  lootCoins Int      @default(0) // Saldo actual de monedas

  // Relaciones
  orders      Order[]
  coinHistory CoinLedger[]
  reviews     Review[]
}

enum Role {
  USER
  ADMIN
}

// Historial inmutable de monedas (Seguridad)
model CoinLedger {
  id        String   @id @default(uuid())
  amount    Int      // Positivo (Gan贸) o Negativo (Gast贸)
  reason    String   // ej: "Compra Orden #123", "Bono Login"
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

// --------------------------------------
// 锔 CATLOGO & INVENTARIO
// --------------------------------------

model Product {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique // SEO: goku-ssj-banpresto
  description String   @db.Text
  brand       String   // Banpresto, Konami
  franchise   String   // Dragon Ball, Pokemon
  category    Category 
  images      String[] // Fotos gen茅ricas del producto Padre

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  variants    ProductVariant[]
  reviews     Review[]
}

model ProductVariant {
  id          String   @id @default(uuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id])

  // L贸gica de negocio Loot Kingdom
  tier        ProductTier   @default(OFFICIAL)
  condition   String?       // Detalle texto: "Sin caja", "Nuevo sellado"
  internalNotes String?     // Notas privadas del admin
  
  price       Decimal       @db.Decimal(10, 2)
  stock       Int           @default(0)
  realPhotos  String[]      // Fotos espec铆ficas (usados)

  cartItems   CartItem[]
  orderItems  OrderItem[]
}

enum Category {
  FIGURE
  TCG_CARD
  PLUSHIE
  DECOR
  APPAREL
}

enum ProductTier {
  OFFICIAL        // Nuevo, Sellado, Importaci贸n directa
  SECOND_HAND     // Pre-owned, cuidado, completos
  BATTLE_DAMAGED  // Usado, Loose, sin caja, detalles est茅ticos
}

// --------------------------------------
//  COMPRAS & CHECKOUT
// --------------------------------------

model Order {
  id          String      @id @default(uuid())
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  
  status      OrderStatus @default(PENDING)
  total       Decimal     @db.Decimal(10, 2) // Total en ARS
  paymentId   String?     // ID de Mercado Pago
  
  items       OrderItem[]
  createdAt   DateTime    @default(now())
  
  // Gamificaci贸n de la orden
  awardedXp   Int         @default(0)
  awardedCoins Int        @default(0)
}

model OrderItem {
  id          String   @id @default(uuid())
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id])
  
  variantId   String
  variant     ProductVariant @relation(fields: [variantId], references: [id])
  
  quantity    Int
  price       Decimal  @db.Decimal(10, 2) // Precio congelado al momento de compra
  productTitle String  // Snapshot del titulo
  condition   String?  // Snapshot de la condicion
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELLED
}

// Carrito temporal (Persistencia)
model CartItem {
  id        String   @id @default(uuid())
  userId    String   // O SessionID si es invitado
  variantId String
  variant   ProductVariant @relation(fields: [variantId], references: [id])
  quantity  Int
}

model Review {
  id        String   @id @default(uuid())
  content   String
  rating    Int
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  productId String
  product   Product  @relation(fields: [productId], references: [id])
}